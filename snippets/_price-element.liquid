{% if card_product.available %}
  <div class="price__element px-2 pb-2 text-gray-600">
    {% if card_product.compare_at_price > card_product.price %}
      <div class="price__element-sale">
        {{ card_product.price | money }}
        <s class="text-red-700"> {{ card_product.compare_at_price | money }}</s>
      </div>
    {% elsif card_product.price_varies %}
      <div class="price__element-varies">
        From : {{ card_product.price_min | money }} to: {{ card_product.price_max | money }}
      </div>
    {% else %}
      {{ card_product.price | money }}
    {% endif %}
  </div>
{% endif %}
